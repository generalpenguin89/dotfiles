" Begin .vimrc

syntax on

set wrapmargin=8
set ruler
set number
set tabstop=3
set shiftwidth=3
set expandtab
set nohlsearch
set autoindent

set guifont=Monospace\ 8
set guifontwide=Monospace\ 8

"set makeprg=ant\ -emacs

set textwidth=72

set background=dark

set mat=8
set incsearch
set showcmd
set smartindent
set smarttab

set comments=sO:*\ -,mO:*\ \ ,exO:*/,s1:/*,mb:*,ex:*/,://
set formatoptions=croql

" End .vimrc

